<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.0//EN" "http://www.sosy-lab.org/benchexec/benchmark-1.0.dtd">
<benchmark tool="cpachecker" timelimit="60 s" hardtimelimit="90 s" memlimit="2 GB" cpuCores="1">

  <option name="-noout"/>
  <option name="-heap">1500M</option>

  <rundefinition name="reachsafety-pred-loopsummary">
    <option name="-config">config/loopsummary/predicateAnalysis-loopsummary.properties</option>
    <propertyfile>../config/properties/unreach-call.prp</propertyfile>
  </rundefinition>
  <rundefinition name="reachsafety-pred-plain">
    <option name="-config">config/predicateAnalysis.properties</option>
    <propertyfile>../config/properties/unreach-call.prp</propertyfile>
  </rundefinition>

  <rundefinition name="nooverflow-pred-loopsummary">
    <option name="-config">config/loopsummary/predicateAnalysis-loopsummary--overflow.properties</option>
    <propertyfile>../config/properties/no-overflow.prp</propertyfile>
  </rundefinition>
  <rundefinition name="nooverflow-pred-plain">
    <option name="-config">config/predicateAnalysis--overflow.properties</option>
    <propertyfile>../config/properties/no-overflow.prp</propertyfile>
  </rundefinition>

  <tasks>
    <includesfile>../programs/loopsummary/loopsummary.set</includesfile>
  </tasks>

</benchmark>
